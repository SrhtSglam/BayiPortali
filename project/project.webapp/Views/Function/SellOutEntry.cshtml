@model List<SellOutItem>

@{
    ViewData["Title"] = "Sell Out Entry";

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPage ?? 1;
    int pageRange = 10;
    int startPage = Math.Max(1, currentPage - (pageRange / 2));
    int endPage = Math.Min(totalPages, startPage + pageRange - 1);
}
<h1>@ViewData["Title"]</h1>

<nav>
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("SellOutEntry", "Function", new { page = 1 })">&laquo;</a>
            </li>

            <li class="page-item">
                <a class="page-link" href="@Url.Action("SellOutEntry", "Function", new { page = currentPage - 1 })">&lt;</a>
            </li>
        }

        @for (int i = startPage; i <= endPage; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("SellOutEntry", "Function", new { page = i })">@i</a>
            </li>
        }

        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("SellOutEntry", "Function", new { page = currentPage + 1 })">&gt;</a>
            </li>

            <li class="page-item">
                <a class="page-link" href="@Url.Action("SellOutEntry", "Function", new { page = totalPages })">&raquo;</a>
            </li>
        }
    </ul>
</nav>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Madde No</th>
            <th scope="col">Seri No</th>
            <th scope="col">Bilgitaş Fatura No</th>
            <th scope="col">Bilgitaş Fatura Tarihi</th>
        </tr>
        <tr>
            <th scope="col" />
            <th scope="col"><input type="text" class="form-control"></th>
            <th scope="col"><input type="text" class="form-control"></th>
            <th scope="col" />
            <th scope="col" />
        </tr>
    </thead>
    <tbody>
        @try
        {
            foreach (var items in Model)
            {
                <tr>
                    <td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sellOutEntryModal">Giriş</button></td>
                    <td>@items.ItemNo</td>
                    <td>@items.SerialNo</td>
                    <td>@items.InvoiceNo</td>
                    <td>@items.InvoiceDate</td>
                </tr>
            }
        }
        catch
        {

        }
    </tbody>
</table>

