<script src="~/lib/ckeditor/ckeditor.js"></script>
@* <script src="https://cdn.ckeditor.com/4.25.1-lts/standard/ckeditor.js"></script> *@

@{
    ViewData["Title"] = "Duyuru Düzenle";
    string value = NoticeTextClass.NoticeTextValue;
}
<h1>@ViewData["Title"]</h1>
<div class="pb-3">
    <div class="mb-3 row">
        <div class="col-12">
            <textarea name="editor" id="editor" class="ckeditor"></textarea>

            <form>
                <script>
                    CKEDITOR.replace('editor');
                    

                    CKEDITOR.instances['editor'].setData(@Html.Raw(Json.Serialize(value)));

                    CKEDITOR.version = '4.22'; // Sürüm numarasını manuel olarak eski sürüme sabitleyin
                </script>
            </form>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-3">
            <button type="button" class="btn btn-success">Değişiklikleri Uygula</button>
        </div>
    </div>
</div>

