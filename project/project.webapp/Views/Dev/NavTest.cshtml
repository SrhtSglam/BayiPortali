@{
    ViewData["Title"] = "NavServiceTest Environment";
}
<h1>@ViewData["Title"]</h1>

<div class="pb-2 row">
  <form method="post" asp-action="NavTest">
      <div class="form-group pb-2">
          <label for="pUserId">Kullanıcı ID:</label>
          <input type="text" class="form-control" id="pUserId" name="pUserId" required value="BAŞAK" />
      </div>
      <div class="form-group pb-2">
          <label for="pItemNo">Ürün Numarası:</label>
          <input type="text" class="form-control" id="pItemNo" name="pItemNo" required value="04TAS2554CI" />
      </div>
      <div class="form-group pb-2">
          <label for="pQuantity">Miktar:</label>
          <input type="number" class="form-control" id="pQuantity" name="pQuantity" step="any" required />
      </div>
      <div class="form-group pb-2">
          <label for="pSalesDescription">Satış Açıklaması:</label>
          <textarea class="form-control" id="pSalesDescription" name="pSalesDescription" rows="4" required></textarea>
      </div>
      
      <button type="submit" class="btn btn-primary pb-2">Gönder</button>
  </form>
</div>
<div class="pb-2 row">
  @if(ViewBag.Message != ""){
    <div class="alert alert-warning" role="alert">
      @ViewBag.Message
    </div>
  }
</div>
