<style>
    .dropdown:hover > .dropdown-menu {
        display: block;
    }

    .dropdown-submenu {
        position: relative;
    }

    .dropdown-submenu > .dropdown-menu {
        display: none;
        position: absolute;
        left: 100%;
        top: 0;
        margin-top: 0;
    }

    .dropdown-submenu:hover > .dropdown-menu {
        display: block;
    }

    .dropdown span:hover, .dropdown a:hover, .nav-item a:hover  {
        background-color: #eeeeee;
        padding: 6px 12px;
        border-radius: 4px;
        transition: background-color 0.5s ease, padding 0.3s ease;
    }
</style>

